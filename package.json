{
  "name": "@smake/fmt",
  "version": "2.1.1",
  "description": "Typescript Module Template",
  "license": "MIT",
  "repository": "https://github.com/kuyoonjo/smake-lib-fmt.git",
  "author": {
    "name": "Yu Chen",
    "email": "yu@chen.news",
    "url": "https://yu.chen.news"
  },
  "keywords": [
    "typescript",
    "generator",
    "node",
    "module",
    "javascript",
    "js"
  ],
  "files": [
    "lib",
    "fmt/include",
    "fmt/src/format.cc",
    "fmt/src/os.cc"
  ],
  "main": "lib/index",
  "types": "lib/index",
  "scripts": {
    "clean": "rimraf lib",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && npm run format && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty"
  },
  "dependencies": {
    "@smake/llvm": "^1.1.2"
  },
  "devDependencies": {
    "@smake/llvm-vscode": "^1.0.0",
    "@types/node": "^16.4.7",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
